# EditorConfig helps maintain consistent coding styles between different editors and IDEs
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{yml,yaml,json,md}]
indent_size = 2

[*.md]
# Keep trailing spaces in Markdown for line breaks
trim_trailing_whitespace = false

[*.ps1]
end_of_line = crlf
indent_style = space
indent_size = 2
