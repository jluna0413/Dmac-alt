# Environment Configuration
NODE_ENV=development
PORT=8052

# Archon Integration
ARCHON_MCP_URL=http://localhost:8051/mcp
ARCHON_SERVER_URL=http://localhost:8181
ARCHON_UI_URL=http://localhost:3737

# Database Configuration (Supabase)
SUPABASE_URL=https://nbuakvajqjxaotmnnjyr.supabase.co
SUPABASE_SERVICE_KEY=your_service_key_here

# MCPControl Configuration
LOG_LEVEL=info
ENABLE_WORKFLOW_CACHE=true
MAX_CONCURRENT_TOOLS=10
TOOL_TIMEOUT_MS=30000
WORKFLOW_TIMEOUT_MS=300000

# Analytics and Monitoring
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=30
PERFORMANCE_METRICS=true

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3737,http://localhost:8181
# When set, non-public endpoints require this API key via `x-api-key` header
MCPCONTROL_API_KEY=
# Legacy toggle (no effect if MCPCONTROL_API_KEY is set)
API_KEY_REQUIRED=false
